      // Event listeners
      applyFiltersBtn.addEventListener('click', function() {
        fetchPragatiData();
        // Hide filter panel after applying filters
        filterSidePanel.classList.remove('active');
        filterControlArea.classList.remove('panel-open');
      });
      
      resetFiltersBtn.addEventListener('click', function() {
        filterFactory.value = 'all';
        filterBatch.value = 'all';
        filterDiploma.value = 'all';
        filterGender.value = 'all';
        filterCategory.value = 'all';
        filterCourseYear.value = 'all';
        filterFinalResult.value = 'all';
        filterTraining.value = 'all';
        filterTicket.value = '';
        filterStartDate.value = '';
        filterEndDate.value = '';
        
        fetchPragatiData();
        // Hide filter panel after resetting
        filterSidePanel.classList.remove('active');
        filterControlArea.classList.remove('panel-open');
      });
      
      showRawDataToggle.addEventListener('change', function() {
        rawDataContainer.style.display = this.checked ? 'block' : 'none';
        if (this.checked) {
          // If toggled on, refresh data to show in table
          fetchPragatiData();
        }
      });

      // Load more button event listener
      loadMoreBtn.addEventListener('click', function() {
        currentPage++;
        fetchPragatiData(true);
      });

      // Download Excel button event listeners for overall tab
      downloadExcelBtn.addEventListener('click', downloadForTab);
      downloadMaleBtn.addEventListener('click', function() { downloadByGender('Male'); });
      downloadFemaleBtn.addEventListener('click', function() { downloadByGender('Female'); });
      downloadPassoutBtn.addEventListener('click', downloadPassout);
      downloadFailBtn.addEventListener('click', downloadFail);
      
      // Download Excel button event listeners for live tab
      downloadLiveExcelBtn.addEventListener('click', downloadForTab);
      downloadLiveMaleBtn.addEventListener('click', function() { downloadByGender('Male'); });
      downloadLiveFemaleBtn.addEventListener('click', function() { downloadByGender('Female'); });
      
      // Download Excel button event listeners for first year tab
      downloadFirstYearExcelBtn.addEventListener('click', downloadForTab);
      downloadFirstYearMaleBtn.addEventListener('click', function() { downloadByGender('Male'); });
      downloadFirstYearFemaleBtn.addEventListener('click', function() { downloadByGender('Female'); });
      
      // Download Excel button event listeners for second year tab
      downloadSecondYearExcelBtn.addEventListener('click', downloadForTab);
      downloadSecondYearMaleBtn.addEventListener('click', function() { downloadByGender('Male'); });
      downloadSecondYearFemaleBtn.addEventListener('click', function() { downloadByGender('Female'); });

      // Initialize the dashboard
      fetchFilterOptions();
    });
  </script>
</body>
