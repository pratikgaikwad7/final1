      <!-- Male Count Card -->
      <div class="stat-card male-card">
        <div class="card-body">
          <div class="metric-subcard-container">
            <div class="metric-subcard">
              <div class="card-header">
                <div class="stat-icon"><i class="bi bi-gender-male"></i></div>
                <button class="btn btn-sm download-btn" id="download-male-btn" title="Download Male Report">
                  <i class="bi bi-download"></i>
                </button>
              </div>
              <div class="stat-title">Male Count</div>
              <div class="stat-value" id="stat-male">0</div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Female Count Card -->
      <div class="stat-card female-card">
        <div class="card-body">
          <div class="metric-subcard-container">
            <div class="metric-subcard">
              <div class="card-header">
                <div class="stat-icon"><i class="bi bi-gender-female"></i></div>
                <button class="btn btn-sm download-btn" id="download-female-btn" title="Download Female Report">
                  <i class="bi bi-download"></i>
                </button>
              </div>
              <div class="stat-title">Female Count</div>
              <div class="stat-value" id="stat-female">0</div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Current Year Joining Card -->
      <div class="stat-card current-year-card">
        <div class="card-body">
          <div class="metric-subcard-container">
            <div class="metric-subcard">
              <div class="card-header">
                <div class="stat-icon"><i class="bi bi-calendar-event"></i></div>
                <button class="btn btn-sm download-btn" id="download-current-year-btn" title="Download Current Year Report">
                  <i class="bi bi-download"></i>
                </button>
              </div>
              <div class="stat-title">Current Year Joining</div>
              <div class="stat-value" id="stat-current-year">0</div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="toggle-raw-data form-check form-switch">
      <input class="form-check-input" type="checkbox" id="show-raw-data">
      <label class="form-check-label" for="show-raw-data">Show Raw Data</label>
    </div>

    <div class="data-table-container" id="raw-data-container">
      <table class="table">
        <thead>
          <tr>
            <th>Sr No</th>
            <th>Ticket No</th>
            <th>Name</th>
            <th>Gender</th>
            <th>Academic Year</th>
            <th>Date of Joining</th>
            <th>JTA Batch</th>
            <th>Date of Separation</th>
            <th>Trade</th>
            <th>Final Result</th>
            <th>Training Name</th>
            <th>Employee Category</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody id="raw-data-body">
          <!-- Data will be populated here -->
        </tbody>
