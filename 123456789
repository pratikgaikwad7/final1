  <!-- Include necessary scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // DOM Elements
      const filterToggleBtn = document.getElementById('filterToggleBtn');
      const filterLabelContainer = document.getElementById('filterLabelContainer');
      const filterSidePanel = document.getElementById('filterSidePanel');
      const filterControlArea = document.getElementById('filterControlArea');
      const closeFilterBtn = document.getElementById('closeFilterBtn');
      const applyFiltersBtn = document.getElementById('apply-filters');
      const resetFiltersBtn = document.getElementById('reset-filters');
      const showRawDataToggle = document.getElementById('show-raw-data');
      const rawDataContainer = document.getElementById('raw-data-container');
      const rawDataBody = document.getElementById('raw-data-body');
      const appliedFiltersStrip = document.getElementById('applied-filters');
      const appliedFiltersList = document.getElementById('appliedFiltersList');
      const loadingOverlay = document.getElementById('loadingOverlay');
      const loadMoreBtn = document.getElementById('load-more-btn');
      const downloadLiveBtn = document.getElementById('download-live-btn');
      const downloadMaleBtn = document.getElementById('download-male-btn');
      const downloadFemaleBtn = document.getElementById('download-female-btn');
      const downloadCurrentYearBtn = document.getElementById('download-current-year-btn');
      
      // Filter elements
      const filterGender = document.getElementById('filter-gender');
      const filterAcademicYear = document.getElementById('filter-academic-year');
      const filterJtaBatch = document.getElementById('filter-jta-batch');
      const filterTrade = document.getElementById('filter-trade');
      const filterFinalResult = document.getElementById('filter-final-result');
      const filterTrainingName = document.getElementById('filter-training-name');
      const filterEmployeeCategory = document.getElementById('filter-employee-category');
      const filterStatus = document.getElementById('filter-status');
      const filterTicket = document.getElementById('filter-ticket');
      const filterStartDate = document.getElementById('filter-start-date');
      const filterEndDate = document.getElementById('filter-end-date');
      
      // Stat elements
      const statLive = document.getElementById('stat-live');
      const statMale = document.getElementById('stat-male');
      const statFemale = document.getElementById('stat-female');
      const statCurrentYear = document.getElementById('stat-current-year');

      // Pagination variables
      let currentPage = 0;
      const pageSize = 50;
      let totalRecords = 0;
      let isLoading = false;
      let isInitialized = false;
      let currentAcademicYear = '';

      // Initialize date pickers
      flatpickr("#filter-start-date", {
        dateFormat: "Y-m-d",
        maxDate: new Date()
      });
      
      flatpickr("#filter-end-date", {
        dateFormat: "Y-m-d",
        maxDate: new Date()
      });

      // Toggle filter panel
      filterToggleBtn.addEventListener('click', toggleFilterPanel);
      filterLabelContainer.addEventListener('click', toggleFilterPanel);
      closeFilterBtn.addEventListener('click', toggleFilterPanel);
      
      function toggleFilterPanel() {
        filterSidePanel.classList.toggle('active');
        filterControlArea.classList.toggle('panel-open');
      }

      // Close filter panel when clicking outside
      document.addEventListener('click', function(event) {
        if (
          !filterSidePanel.contains(event.target) &&
          !filterToggleBtn.contains(event.target) &&
          !filterLabelContainer.contains(event.target) &&
          filterSidePanel.classList.contains('active')
        ) {
          filterSidePanel.classList.remove('active');
          filterControlArea.classList.remove('panel-open');
        }
      });

      // Set current year as default filter
      function setCurrentYearAsDefault() {
        const currentYear = new Date().getFullYear();
        currentAcademicYear = `${currentYear}/${String(currentYear+1).slice(-2)}`;
        filterAcademicYear.value = currentAcademicYear;
      }

      // Improved loading functions
      function showLoading() {
        loadingOverlay.classList.add('active');
      }
      
      function hideLoading() {
        loadingOverlay.classList.remove('active');
      }

      // Fetch filter options from database
      function fetchFilterOptions() {
        // Only show loading spinner on initial load
        if (!isInitialized) {
          showLoading();
        }
        
        fetch('/user_tech/api/jta/filter-options')
          .then(response => {
            if (!response.ok) {
              throw new Error('Network response was not ok');
            }
            return response.json();
          })
          .then(data => {
            console.log('Filter options data:', data); // Debug: log the response
            
            // Populate gender options
            filterGender.innerHTML = '<option value="all">All</option>';
            data.genders.forEach(gender => {
              const option = document.createElement('option');
              option.value = gender;
              option.textContent = gender;
              filterGender.appendChild(option);
            });
            
            // Populate academic year options
            filterAcademicYear.innerHTML = '<option value="all">All Years</option>';
            console.log('Academic years:', data.academic_years); // Debug: log academic years
            if (data.academic_years && data.academic_years.length > 0) {
              data.academic_years.forEach(year => {
                const option = document.createElement('option');
                option.value = year;
                option.textContent = year;
                filterAcademicYear.appendChild(option);
              });
            } else {
              // If no academic years are returned, add a default message
              const option = document.createElement('option');
              option.value = "no-data";
              option.textContent = "No academic years available";
              option.disabled = true;
              filterAcademicYear.appendChild(option);
            }
            
            // Populate JTA batch options
            filterJtaBatch.innerHTML = '<option value="all">All Batches</option>';
            data.jta_batches.forEach(batch => {
              const option = document.createElement('option');
              option.value = batch;
              option.textContent = batch;
              filterJtaBatch.appendChild(option);
            });
            
            // Populate trade options
            filterTrade.innerHTML = '<option value="all">All Trades</option>';
            data.trades.forEach(trade => {
              const option = document.createElement('option');
              option.value = trade;
              option.textContent = trade;
              filterTrade.appendChild(option);
            });
            
            // Populate final result options
            filterFinalResult.innerHTML = '<option value="all">All Results</option>';
            data.final_results.forEach(result => {
              const option = document.createElement('option');
              option.value = result;
              option.textContent = result;
              filterFinalResult.appendChild(option);
            });
            
            // Populate training name options
            filterTrainingName.innerHTML = '<option value="all">All Trainings</option>';
            data.training_names.forEach(training => {
              const option = document.createElement('option');
              option.value = training;
              option.textContent = training;
              filterTrainingName.appendChild(option);
            });
            
            // Populate employee category options
            filterEmployeeCategory.innerHTML = '<option value="all">All Categories</option>';
            data.employee_categories.forEach(category => {
              const option = document.createElement('option');
              option.value = category;
              option.textContent = category;
              filterEmployeeCategory.appendChild(option);
            });
            
            // Populate status options
            filterStatus.innerHTML = '<option value="all">All Statuses</option>';
            data.statuses.forEach(status => {
              const option = document.createElement('option');
              option.value = status;
              option.textContent = status;
              filterStatus.appendChild(option);
            });
            
            // Set current year as default and load initial data
            setCurrentYearAsDefault();
            fetchJtaData();
            fetchAllStatsData(); // Fetch all stats data separately
            
            // Mark as initialized
            isInitialized = true;
          })
          .catch(error => {
            console.error('Error fetching filter options:', error);
            alert('Error loading filter options. Please try again later.');
            hideLoading();
          });
      }

      // Fetch all stats data (live count, male count, female count) without any filters
      function fetchAllStatsData() {
        fetchLiveCountData();
        fetchMaleCountData();
        fetchFemaleCountData();
      }

      // Fetch live count data (status = 'Active' without any other filters)
      function fetchLiveCountData() {
        const filters = {
          status: 'Active',
          limit: 1,
          offset: 0
        };
        
        const queryString = new URLSearchParams();
        for (const key in filters) {
          queryString.append(key, filters[key]);
        }
        
        fetch(`/user_tech/api/jta/data?${queryString.toString()}`)
          .then(response => {
            if (!response.ok) {
              throw new Error('Network response was not ok');
            }
            return response.json();
          })
          .then(data => {
            statLive.textContent = data.stats.live_count;
          })
          .catch(error => {
            console.error('Error fetching live count data:', error);
            statLive.textContent = '0';
          });
      }

      // Fetch male count data (gender = 'Male' AND status = 'Active' without any other filters)
      function fetchMaleCountData() {
        const filters = {
          gender: 'Male',
          status: 'Active',
          limit: 1,
          offset: 0
        };
        
        const queryString = new URLSearchParams();
        for (const key in filters) {
          queryString.append(key, filters[key]);
        }
        
        fetch(`/user_tech/api/jta/data?${queryString.toString()}`)
          .then(response => {
            if (!response.ok) {
              throw new Error('Network response was not ok');
            }
            return response.json();
          })
          .then(data => {
            statMale.textContent = data.stats.male_count;
          })
          .catch(error => {
            console.error('Error fetching male count data:', error);
            statMale.textContent = '0';
          });
      }

      // Fetch female count data (gender = 'Female' AND status = 'Active' without any other filters)
      function fetchFemaleCountData() {
        const filters = {
          gender: 'Female',
          status: 'Active',
          limit: 1,
          offset: 0
        };
        
        const queryString = new URLSearchParams();
        for (const key in filters) {
          queryString.append(key, filters[key]);
        }
        
        fetch(`/user_tech/api/jta/data?${queryString.toString()}`)
          .then(response => {
            if (!response.ok) {
              throw new Error('Network response was not ok');
            }
            return response.json();
          })
          .then(data => {
            statFemale.textContent = data.stats.female_count;
          })
          .catch(error => {
            console.error('Error fetching female count data:', error);
            statFemale.textContent = '0';
          });
      }

      // Fetch JTA data based on filters
      function fetchJtaData(isLoadMore = false) {
        if (isLoading) return;
        
        if (!isLoadMore) {
          currentPage = 0;
          rawDataBody.innerHTML = '';
        }
        
        // Only show loading spinner if not initial load
        if (isInitialized) {
          showLoading();
        }
        
        isLoading = true;
        
        // Build filter parameters
        const filters = {
          gender: filterGender.value,
          academic_year: filterAcademicYear.value,
          jta_batch: filterJtaBatch.value,
          trade: filterTrade.value,
          final_result: filterFinalResult.value,
          training_name: filterTrainingName.value,
          employee_category: filterEmployeeCategory.value,
          status: filterStatus.value,
          ticket: filterTicket.value,
          startDate: filterStartDate.value,
          endDate: filterEndDate.value,
          limit: pageSize,
          offset: currentPage * pageSize
        };
        
        console.log('Applying filters:', filters); // Debug: log filters
        
        // Build query string
        const queryString = new URLSearchParams();
        for (const key in filters) {
          if (filters[key] !== 'all' && filters[key] !== '') {
            queryString.append(key, filters[key]);
          }
        }
        
        fetch(`/user_tech/api/jta/data?${queryString.toString()}`)
          .then(response => {
            if (!response.ok) {
              throw new Error('Network response was not ok');
            }
            return response.json();
          })
          .then(data => {
            console.log('JTA data:', data); // Debug: log the response
            
            // For current year joining count, we need to make a separate call
            // if the current filter is not already set to the current year
            if (filterAcademicYear.value !== currentAcademicYear) {
              fetchCurrentYearData();
            } else {
              statCurrentYear.textContent = data.stats.coverage_count;
            }
            
            // Update raw data if visible
            if (showRawDataToggle.checked) {
              updateRawDataTable(data.records, isLoadMore);
            }
            
            // Update applied filters display
            updateAppliedFilters(filters);
            
            // Update pagination
            totalRecords = data.total_records;
            updatePagination();
            
            hideLoading();
            isLoading = false;
          })
          .catch(error => {
            console.error('Error fetching JTA data:', error);
            alert('Error loading data. Please try again later.');
            hideLoading();
            isLoading = false;
          });
      }

      // Fetch current year data separately
      function fetchCurrentYearData() {
        const filters = {
          academic_year: currentAcademicYear,
          limit: 1,
          offset: 0
        };
        
        const queryString = new URLSearchParams();
        for (const key in filters) {
          queryString.append(key, filters[key]);
        }
        
        fetch(`/user_tech/api/jta/data?${queryString.toString()}`)
          .then(response => {
            if (!response.ok) {
              throw new Error('Network response was not ok');
            }
            return response.json();
          })
          .then(data => {
            statCurrentYear.textContent = data.stats.coverage_count;
          })
          .catch(error => {
            console.error('Error fetching current year data:', error);
            statCurrentYear.textContent = '0';
          });
      }

      // Update raw data table
      function updateRawDataTable(records, isAppend = false) {
        if (!isAppend) {
          rawDataBody.innerHTML = '';
        }
        
        if (records.length === 0 && !isAppend) {
          const row = document.createElement('tr');
          row.innerHTML = '<td colspan="13" class="text-center">No data found</td>';
          rawDataBody.appendChild(row);
          return;
        }
        
        records.forEach(record => {
          const row = document.createElement('tr');
          row.innerHTML = `
            <td>${record.sr_no || ''}</td>
            <td>${record.ticket_no || ''}</td>
            <td>${record.name || ''}</td>
            <td>${record.gender || ''}</td>
            <td>${record.academic_year || ''}</td>
            <td>${record.date_of_joining || ''}</td>
            <td>${record.jta_batch_number || ''}</td>
            <td>${record.date_of_separation || ''}</td>
            <td>${record.trade || ''}</td>
            <td>${record.final_result || ''}</td>
            <td>${record.training_name || ''}</td>
            <td>${record.employee_category || ''}</td>
            <td>${record.status || ''}</td>
          `;
          rawDataBody.appendChild(row);
        });
      }

      // Update pagination
      function updatePagination() {
        const loadedRecords = currentPage * pageSize + rawDataBody.children.length;
        
        if (loadedRecords >= totalRecords) {
          loadMoreBtn.disabled = true;
          loadMoreBtn.textContent = 'All records loaded';
        } else {
          loadMoreBtn.disabled = false;
          loadMoreBtn.textContent = 'Load More';
        }
      }

      // Update applied filters display
      function updateAppliedFilters(filters) {
        appliedFiltersList.innerHTML = '';
        let hasFilters = false;
        
        const filterLabels = {
          gender: 'Gender',
          academic_year: 'Academic Year',
          jta_batch: 'JTA Batch',
          trade: 'Trade',
          final_result: 'Final Result',
          training_name: 'Training Name',
          employee_category: 'Employee Category',
          status: 'Status',
          ticket: 'Ticket Number',
          startDate: 'Start Date',
          endDate: 'End Date'
        };
        
        for (const key in filters) {
          if (filters[key] && filters[key] !== 'all' && filters[key] !== '' && key !== 'limit' && key !== 'offset') {
            hasFilters = true;
            const filterItem = document.createElement('div');
            filterItem.className = 'applied-filter-item';
            
            let displayValue = filters[key];
            if (key === 'startDate' || key === 'endDate') {
              displayValue = new Date(filters[key]).toLocaleDateString();
            }
            
            filterItem.innerHTML = `
              <span class="filter-key">${filterLabels[key]}:</span>
              <span class="filter-value">${displayValue}</span>
            `;
            appliedFiltersList.appendChild(filterItem);
          }
        }
        
        appliedFiltersStrip.style.display = hasFilters ? 'flex' : 'none';
      }

      // Function to download data by status
      function downloadByStatus(status) {
        // For live count, we only want status = 'Active' without any other filters
        const filters = {
          status: status
        };
        
        const queryString = new URLSearchParams();
        for (const key in filters) {
          queryString.append(key, filters[key]);
        }
        
        const downloadUrl = `/user_tech/api/jta/download?${queryString.toString()}`;
        window.location.href = downloadUrl;
      }

      // Function to download data by gender with active status
      function downloadByGender(gender) {
        // For gender counts, we want gender and status = 'Active' without any other filters
        const filters = {
          gender: gender,
          status: 'Active'
        };
        
        const queryString = new URLSearchParams();
        for (const key in filters) {
          queryString.append(key, filters[key]);
        }
        
        const downloadUrl = `/user_tech/api/jta/download?${queryString.toString()}`;
        window.location.href = downloadUrl;
      }

      // Function to download current year data
      function downloadCurrentYear() {
        // Build the same filter parameters as when fetching data
        const filters = {
          gender: filterGender.value,
          academic_year: currentAcademicYear, // Use current academic year
          jta_batch: filterJtaBatch.value,
          trade: filterTrade.value,
          final_result: filterFinalResult.value,
          training_name: filterTrainingName.value,
          employee_category: filterEmployeeCategory.value,
          status: filterStatus.value,
          ticket: filterTicket.value,
          startDate: filterStartDate.value,
          endDate: filterEndDate.value
        };
        
        // Build query string
        const queryString = new URLSearchParams();
        for (const key in filters) {
          if (filters[key] !== 'all' && filters[key] !== '') {
            queryString.append(key, filters[key]);
          }
        }
        
        // Open the download link
        const downloadUrl = `/user_tech/api/jta/download?${queryString.toString()}`;
        window.location.href = downloadUrl;
      }

      // Event listeners
      applyFiltersBtn.addEventListener('click', function() {
        fetchJtaData();
        fetchAllStatsData(); // Always fetch all stats when filters are applied
        // Hide filter panel after applying filters
        filterSidePanel.classList.remove('active');
        filterControlArea.classList.remove('panel-open');
      });
      
      resetFiltersBtn.addEventListener('click', function() {
        filterGender.value = 'all';
        filterJtaBatch.value = 'all';
        filterTrade.value = 'all';
        filterFinalResult.value = 'all';
        filterTrainingName.value = 'all';
        filterEmployeeCategory.value = 'all';
        filterStatus.value = 'all';
        filterTicket.value = '';
        filterStartDate.value = '';
        filterEndDate.value = '';
        
        // Set current year as default
        setCurrentYearAsDefault();
        
        fetchJtaData();
        fetchAllStatsData(); // Always fetch all stats when filters are reset
        // Hide filter panel after resetting
        filterSidePanel.classList.remove('active');
        filterControlArea.classList.remove('panel-open');
      });
      
      showRawDataToggle.addEventListener('change', function() {
        rawDataContainer.style.display = this.checked ? 'block' : 'none';
        if (this.checked) {
          // If toggled on, refresh data to show in table
          fetchJtaData();
        }
      });

      // Load more button event listener
      loadMoreBtn.addEventListener('click', function() {
        currentPage++;
        fetchJtaData(true);
      });

      // Download button event listeners
      downloadLiveBtn.addEventListener('click', function() {
        downloadByStatus('Active');
      });

      downloadMaleBtn.addEventListener('click', function() {
        downloadByGender('Male');
      });

      downloadFemaleBtn.addEventListener('click', function() {
        downloadByGender('Female');
      });

      downloadCurrentYearBtn.addEventListener('click', function() {
        downloadCurrentYear();
      });

      // Initialize the dashboard
      fetchFilterOptions();
    });
  </script>
</body>
</html>
