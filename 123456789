  <!-- Include necessary scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // DOM Elements
      const filterToggleBtn = document.getElementById('filterToggleBtn');
      const filterLabelContainer = document.getElementById('filterLabelContainer');
      const filterSidePanel = document.getElementById('filterSidePanel');
      const filterControlArea = document.getElementById('filterControlArea');
      const closeFilterBtn = document.getElementById('closeFilterBtn');
      const applyFiltersBtn = document.getElementById('apply-filters');
      const resetFiltersBtn = document.getElementById('reset-filters');
      const showRawDataToggle = document.getElementById('show-raw-data');
      const rawDataContainer = document.getElementById('raw-data-container');
      const rawDataBody = document.getElementById('raw-data-body');
      const appliedFiltersStrip = document.getElementById('applied-filters');
      const appliedFiltersList = document.getElementById('appliedFiltersList');
      const loadingOverlay = document.getElementById('loadingOverlay');
      const loadMoreBtn = document.getElementById('load-more-btn');
      
      // Download buttons for overall tab
      const downloadExcelBtn = document.getElementById('download-excel-btn');
      const downloadMaleBtn = document.getElementById('download-male-btn');
      const downloadFemaleBtn = document.getElementById('download-female-btn');
      const downloadPassoutBtn = document.getElementById('download-passout-btn');
      const downloadFailBtn = document.getElementById('download-fail-btn');
      
      // Download buttons for live tab
      const downloadLiveExcelBtn = document.getElementById('download-live-excel-btn');
      const downloadLiveMaleBtn = document.getElementById('download-live-male-btn');
      const downloadLiveFemaleBtn = document.getElementById('download-live-female-btn');
      
      // Download buttons for first year tab
      const downloadFirstYearExcelBtn = document.getElementById('download-first-year-excel-btn');
      const downloadFirstYearMaleBtn = document.getElementById('download-first-year-male-btn');
      const downloadFirstYearFemaleBtn = document.getElementById('download-first-year-female-btn');
      
      // Download buttons for second year tab
      const downloadSecondYearExcelBtn = document.getElementById('download-second-year-excel-btn');
      const downloadSecondYearMaleBtn = document.getElementById('download-second-year-male-btn');
      const downloadSecondYearFemaleBtn = document.getElementById('download-second-year-female-btn');
      
      // Tab elements
      const pragatiTabs = document.querySelectorAll('.pragati-tab');
      const tabContents = document.querySelectorAll('.tab-content');
      
      // Filter elements
      const filterFactory = document.getElementById('filter-factory');
      const filterBatch = document.getElementById('filter-batch');
      const filterDiploma = document.getElementById('filter-diploma');
      const filterGender = document.getElementById('filter-gender');
      const filterCategory = document.getElementById('filter-category');
      const filterCourseYear = document.getElementById('filter-course-year');
      const filterFinalResult = document.getElementById('filter-final-result');
      const filterTraining = document.getElementById('filter-training');
      const filterTicket = document.getElementById('filter-ticket');
      const filterStartDate = document.getElementById('filter-start-date');
      const filterEndDate = document.getElementById('filter-end-date');
      
      // Stat elements for overall tab
      const statBatches = document.getElementById('stat-batches');
      const statCoverage = document.getElementById('stat-coverage');
      const statMale = document.getElementById('stat-male');
      const statFemale = document.getElementById('stat-female');
      const statPassout = document.getElementById('stat-passout');
      const statFail = document.getElementById('stat-fail');
      
      // Stat elements for live tab
      const statLiveBatches = document.getElementById('stat-live-batches');
      const statLiveCoverage = document.getElementById('stat-live-coverage');
      const statLiveMale = document.getElementById('stat-live-male');
      const statLiveFemale = document.getElementById('stat-live-female');
      
      // Stat elements for first year tab
      const statFirstYearBatches = document.getElementById('stat-first-year-batches');
      const statFirstYearCoverage = document.getElementById('stat-first-year-coverage');
      const statFirstYearMale = document.getElementById('stat-first-year-male');
      const statFirstYearFemale = document.getElementById('stat-first-year-female');
      
      // Stat elements for second year tab
      const statSecondYearBatches = document.getElementById('stat-second-year-batches');
      const statSecondYearCoverage = document.getElementById('stat-second-year-coverage');
      const statSecondYearMale = document.getElementById('stat-second-year-male');
      const statSecondYearFemale = document.getElementById('stat-second-year-female');

      // Pagination variables
      let currentPage = 0;
      const pageSize = 50;
      let totalRecords = 0;
      let isLoading = false;
      let isInitialized = false;
      let activeTab = 'overall';

      // Initialize date pickers
      flatpickr("#filter-start-date", {
        dateFormat: "Y-m-d",
        maxDate: new Date()
      });
      
      flatpickr("#filter-end-date", {
        dateFormat: "Y-m-d",
        maxDate: new Date()
      });

      // Toggle filter panel
      filterToggleBtn.addEventListener('click', toggleFilterPanel);
      filterLabelContainer.addEventListener('click', toggleFilterPanel);
      closeFilterBtn.addEventListener('click', toggleFilterPanel);
      
      function toggleFilterPanel() {
        filterSidePanel.classList.toggle('active');
        filterControlArea.classList.toggle('panel-open');
      }

      // Close filter panel when clicking outside
      document.addEventListener('click', function(event) {
        if (
          !filterSidePanel.contains(event.target) &&
          !filterToggleBtn.contains(event.target) &&
          !filterLabelContainer.contains(event.target) &&
          filterSidePanel.classList.contains('active')
        ) {
          filterSidePanel.classList.remove('active');
          filterControlArea.classList.remove('panel-open');
        }
      });

      // Improved loading functions
      function showLoading() {
        loadingOverlay.classList.add('active');
      }
      
      function hideLoading() {
        loadingOverlay.classList.remove('active');
      }

      // Tab switching
      pragatiTabs.forEach(tab => {
        tab.addEventListener('click', function() {
          // Remove active class from all tabs and contents
          pragatiTabs.forEach(t => t.classList.remove('active'));
          tabContents.forEach(c => c.classList.remove('active'));
          
          // Add active class to clicked tab
          this.classList.add('active');
          activeTab = this.getAttribute('data-tab');
          
          // Show corresponding content
          document.getElementById(`${activeTab}-tab-content`).classList.add('active');
          
          // Fetch data for the active tab
          fetchPragatiData();
        });
      });

      // Fetch filter options from database
      function fetchFilterOptions() {
        // Only show loading spinner on initial load
        if (!isInitialized) {
          showLoading();
        }
        
        fetch('/user_tech/api/pragati/filter-options')
          .then(response => {
            if (!response.ok) {
              throw new Error('Network response was not ok');
            }
            return response.json();
          })
          .then(data => {
            console.log('Filter options data:', data); // Debug: log the response
            
            // Populate factory options
            filterFactory.innerHTML = '<option value="all">All Factories</option>';
            data.factories.forEach(factory => {
              const option = document.createElement('option');
              option.value = factory;
              option.textContent = factory;
              filterFactory.appendChild(option);
            });
            
            // Populate batch options
            filterBatch.innerHTML = '<option value="all">All Batches</option>';
            data.batches.forEach(batch => {
              const option = document.createElement('option');
              option.value = batch;
              option.textContent = batch;
              filterBatch.appendChild(option);
            });
            
            // Populate diploma options
            filterDiploma.innerHTML = '<option value="all">All Diplomas</option>';
            data.diplomas.forEach(diploma => {
              const option = document.createElement('option');
              option.value = diploma;
              option.textContent = diploma;
              filterDiploma.appendChild(option);
            });
            
            // Populate gender options
            filterGender.innerHTML = '<option value="all">All</option>';
            data.genders.forEach(gender => {
              const option = document.createElement('option');
              option.value = gender;
              option.textContent = gender;
              filterGender.appendChild(option);
            });
            
            // Populate category options
            filterCategory.innerHTML = '<option value="all">All</option>';
            data.categories.forEach(category => {
              const option = document.createElement('option');
              option.value = category;
              option.textContent = category;
              filterCategory.appendChild(option);
            });
            
            // Populate course year options
            filterCourseYear.innerHTML = '<option value="all">All Years</option>';
            data.course_years.forEach(year => {
              const option = document.createElement('option');
              option.value = year;
              option.textContent = year;
              filterCourseYear.appendChild(option);
            });
            
            // Populate final result options
            filterFinalResult.innerHTML = '<option value="all">All Results</option>';
            data.final_results.forEach(result => {
              const option = document.createElement('option');
              option.value = result;
              option.textContent = result;
              filterFinalResult.appendChild(option);
            });
            
            // Populate training options
            filterTraining.innerHTML = '<option value="all">All Trainings</option>';
            data.trainings.forEach(training => {
              const option = document.createElement('option');
              option.value = training;
              option.textContent = training;
              filterTraining.appendChild(option);
            });
            
            // Load initial data without setting current year as default
            fetchPragatiData();
            
            // Mark as initialized
            isInitialized = true;
          })
          .catch(error => {
            console.error('Error fetching filter options:', error);
            alert('Error loading filter options. Please try again later.');
            hideLoading();
          });
      }

      // Fetch Pragati data based on filters and active tab
      function fetchPragatiData(isLoadMore = false) {
        if (isLoading) return;
        
        if (!isLoadMore) {
          currentPage = 0;
          rawDataBody.innerHTML = '';
        }
        
        // Only show loading spinner if not initial load
        if (isInitialized) {
          showLoading();
        }
        
        isLoading = true;
        
        // Build filter parameters
        const filters = {
          factory: filterFactory.value,
          batch: filterBatch.value,
          diploma: filterDiploma.value,
          gender: filterGender.value,
          category: filterCategory.value,
          course_year: filterCourseYear.value,
          final_result: filterFinalResult.value,
          training: filterTraining.value,
          ticket: filterTicket.value,
          startDate: filterStartDate.value,
          endDate: filterEndDate.value,
          limit: pageSize,
          offset: currentPage * pageSize,
          tab: activeTab  // Add active tab parameter
        };
        
        console.log('Applying filters:', filters); // Debug: log filters
        
        // Build query string
        const queryString = new URLSearchParams();
        for (const key in filters) {
          if (filters[key] !== 'all' && filters[key] !== '') {
            queryString.append(key, filters[key]);
          }
        }
        
        fetch(`/user_tech/api/pragati/data?${queryString.toString()}`)
          .then(response => {
            if (!response.ok) {
              throw new Error('Network response was not ok');
            }
            return response.json();
          })
          .then(data => {
            console.log('Pragati data:', data); // Debug: log the response
            
            // Update statistics based on active tab
            if (activeTab === 'overall') {
              statBatches.textContent = data.stats.batch_count;
              statCoverage.textContent = data.stats.coverage_count;
              statMale.textContent = data.stats.male_count;
              statFemale.textContent = data.stats.female_count;
              statPassout.textContent = data.stats.pass_count || 0;
              statFail.textContent = data.stats.fail_count || 0;
            } else if (activeTab === 'live') {
              statLiveBatches.textContent = data.stats.batch_count;
              statLiveCoverage.textContent = data.stats.coverage_count;
              statLiveMale.textContent = data.stats.male_count;
              statLiveFemale.textContent = data.stats.female_count;
            } else if (activeTab === 'first-year') {
              statFirstYearBatches.textContent = data.stats.batch_count;
              statFirstYearCoverage.textContent = data.stats.coverage_count;
              statFirstYearMale.textContent = data.stats.male_count;
              statFirstYearFemale.textContent = data.stats.female_count;
            } else if (activeTab === 'second-year') {
              statSecondYearBatches.textContent = data.stats.batch_count;
              statSecondYearCoverage.textContent = data.stats.coverage_count;
              statSecondYearMale.textContent = data.stats.male_count;
              statSecondYearFemale.textContent = data.stats.female_count;
            }
            
            // Update raw data if visible
            if (showRawDataToggle.checked) {
              updateRawDataTable(data.records, isLoadMore);
            }
            
            // Update applied filters display
            updateAppliedFilters(filters);
            
            // Update pagination
            totalRecords = data.total_records;
            updatePagination();
            
            hideLoading();
            isLoading = false;
          })
          .catch(error => {
            console.error('Error fetching Pragati data:', error);
            alert('Error loading data. Please try again later.');
            hideLoading();
            isLoading = false;
          });
      }

      // Update raw data table
      function updateRawDataTable(records, isAppend = false) {
        if (!isAppend) {
          rawDataBody.innerHTML = '';
        }
        
        if (records.length === 0 && !isAppend) {
          const row = document.createElement('tr');
          row.innerHTML = '<td colspan="15" class="text-center">No data found</td>';
          rawDataBody.appendChild(row);
          return;
        }
        
        records.forEach(record => {
          const row = document.createElement('tr');
          row.innerHTML = `
            <td>${record.sr_no || ''}</td>
            <td>${record.ticket_no || ''}</td>
            <td>${record.name || ''}</td>
            <td>${record.gender || ''}</td>
            <td>${record.employee_category || ''}</td>
            <td>${record.factory || ''}</td>
            <td>${record.course_joining_year || ''}</td>
            <td>${record.date_of_joining || ''}</td>
            <td>${record.pragati_batch_number || ''}</td>
            <td>${record.diploma_name || ''}</td>
            <td>${record.first_year_result || ''}</td>
            <td>${record.second_year_result || ''}</td>
            <td>${record.final_result || ''}</td>
            <td>${record.training_name || ''}</td>
            <td>${record.remark || ''}</td>
          `;
          rawDataBody.appendChild(row);
        });
      }

      // Update pagination
      function updatePagination() {
        const loadedRecords = currentPage * pageSize + rawDataBody.children.length;
        
        if (loadedRecords >= totalRecords) {
          loadMoreBtn.disabled = true;
          loadMoreBtn.textContent = 'All records loaded';
        } else {
          loadMoreBtn.disabled = false;
          loadMoreBtn.textContent = 'Load More';
        }
      }

      // Update applied filters display
      function updateAppliedFilters(filters) {
        appliedFiltersList.innerHTML = '';
        let hasFilters = false;
        
        const filterLabels = {
          factory: 'Factory',
          batch: 'Batch',
          diploma: 'Diploma',
          gender: 'Gender',
          category: 'Employee Category',
          course_year: 'Course Year',
          final_result: 'Final Result',
          training: 'Training',
          ticket: 'Ticket Number',
          startDate: 'Start Date',
          endDate: 'End Date'
        };
        
        for (const key in filters) {
          if (filters[key] && filters[key] !== 'all' && filters[key] !== '' && key !== 'limit' && key !== 'offset' && key !== 'tab') {
            hasFilters = true;
            const filterItem = document.createElement('div');
            filterItem.className = 'applied-filter-item';
            
            let displayValue = filters[key];
            if (key === 'startDate' || key === 'endDate') {
              displayValue = new Date(filters[key]).toLocaleDateString();
            }
            
            filterItem.innerHTML = `
              <span class="filter-key">${filterLabels[key]}:</span>
              <span class="filter-value">${displayValue}</span>
            `;
            appliedFiltersList.appendChild(filterItem);
          }
        }
        
        // Add active tab as a filter
        if (activeTab !== 'overall') {
          hasFilters = true;
          const filterItem = document.createElement('div');
          filterItem.className = 'applied-filter-item';
          
          let tabLabel = '';
          if (activeTab === 'live') tabLabel = 'Live Count';
          else if (activeTab === 'first-year') tabLabel = '1st Year Count';
          else if (activeTab === 'second-year') tabLabel = '2nd Year Count';
          
          filterItem.innerHTML = `
            <span class="filter-key">View:</span>
            <span class="filter-value">${tabLabel}</span>
          `;
          appliedFiltersList.appendChild(filterItem);
        }
        
        appliedFiltersStrip.style.display = hasFilters ? 'flex' : 'none';
      }

      // Function to download data by gender
      function downloadByGender(gender) {
        // Build the same filter parameters as when fetching data
        const filters = {
          factory: filterFactory.value,
          batch: filterBatch.value,
          diploma: filterDiploma.value,
          gender: gender, // This will be either 'Male' or 'Female'
          category: filterCategory.value,
          course_year: filterCourseYear.value,
          final_result: filterFinalResult.value,
          training: filterTraining.value,
          ticket: filterTicket.value,
          startDate: filterStartDate.value,
          endDate: filterEndDate.value,
          tab: activeTab  // Add active tab parameter
        };
        
        // Build query string
        const queryString = new URLSearchParams();
        for (const key in filters) {
          if (filters[key] !== 'all' && filters[key] !== '') {
            queryString.append(key, filters[key]);
          }
        }
        
        // Open the download link
        const downloadUrl = `/user_tech/api/pragati/download?${queryString.toString()}`;
        window.location.href = downloadUrl;
      }

      // Function to download data for specific tab
      function downloadForTab() {
        // Build the same filter parameters as when fetching data
        const filters = {
          factory: filterFactory.value,
          batch: filterBatch.value,
          diploma: filterDiploma.value,
          gender: filterGender.value,
          category: filterCategory.value,
